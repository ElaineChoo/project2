<div class="container-fluid">
    <div class='row'>
        <div class='col-md-12'>
            <br><br>
            <button class="btn btn-default" type="button" onclick="window.location.href='/{{user.id}}/questions/new'">Create</button>
            <br><br>
        </div>
    </div>
    <div class='row'>
        <div class="col-md-12 table-responsive">
            <table class="table table-striped">
                <thead width="100%">
                    <tr>
                        <th width="70%">Questions</th>
                        <th>Response</th>
                    </tr>
                </thead>
                <tbody width="100%">
                    {{#each question}}
                    <tr>
                        <td><a href="polls/{{this.id}}/question">{{this.question}}</a></td>
                        <td></td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
            <br><br>
        </div>
    </div>
</div>