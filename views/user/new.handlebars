<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <br>
            <h2>Registration</h2>
            <br>
            <form class="user-form" method="POST" action="/:id/polls">
            <div class="form-group">
                <label for="img">Profile picture URL:</label>
                <input class="form-control" id="img" name="img" type="text" placeholder="Enter image URL"/>
            </div>

            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" id="username" name="username" type="text" placeholder="Enter your Login Id"/>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input class="form-control" id="email" name="email" type="email" placeholder="Enter your email"/>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" id="password" name="password" type="password" placeholder="Enter your password"/><BR>
                <input type="checkbox" onclick="showPassword()"> Show Password
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Remember me</label>
            </div>

            <input class="btn btn-default" name="Submit" type="submit"/>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br>
            <a href='/login'>Have an account? Login here!</a>
            <br><br>
        </div>
    </div>
</div>
